{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/.vscode",
    "**/.history",
    "**/History",
    "AppData",
    "**/AppData",
    "**/OneDrive",
    "**/test",
    "**/*backup*",
    "**/*.tmp",
    "**/*.history"
  ]
}
